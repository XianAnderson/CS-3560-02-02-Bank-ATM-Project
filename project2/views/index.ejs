<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ATM Login</title>
    <style>
        /* Reset */
        body, html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        /* Main container */
        .container {
            background-color: #3367d6; /* Blue background */
            height: 100vh; /* Full viewport height */
            display: flex;
            justify-content: space-between; /* Space between left and right sections */
            align-items: center; /* Align items vertically */
            color: white; /* White text color */
            padding: 0 50px; /* Add space on the sides */
        }

        /* Left section for ATM and logo */
        .left-section {
            text-align: center; /* Center align text */
        }

        .atm-heading {
            font-size: 48px; /* Large font size for "ATM" */
            font-weight: bold; /* Bold text */
            margin-bottom: 20px; /* Space below the heading */
        }

        .bank-image {
            width: 120px; /* Set image width */
            height: auto; /* Maintain aspect ratio */
            margin-bottom: 20px; /* Space below the image */
        }

        /* Right section with vertical black box */
        .right-section {
            background-color: #000; /* Black background */
            border-radius: 20px; /* Rounded corners */
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.5); /* Add shadow for depth */
            width: 400px; /* Fixed width */
            padding: 30px; /* Internal padding */
            display: flex;
            flex-direction: column; /* Stack content vertically */
            text-align: center; /* Center align text */
        }

        .right-section h2 {
            font-size: 28px; /* Font size for heading */
            margin-bottom: 20px; /* Space below heading */
        }

        .form-group {
            margin-bottom: 20px; /* Space between form fields */
        }

        .form-group label {
            display: block; /* Label on its own line */
            font-size: 18px; /* Font size for labels */
            margin-bottom: 8px; /* Space below label */
        }

        .form-group input {
            width: 100%; /* Full width input fields */
            padding: 10px; /* Internal padding */
            font-size: 16px; /* Input font size */
            border: none; /* Remove borders */
            border-radius: 8px; /* Rounded corners */
            background-color: #f2f2f2; /* Light gray background */
            color: black; /* Black text */
        }

        .button-group {
            display: flex; /* Arrange buttons horizontally */
            justify-content: space-between; /* Space out buttons */
            margin-top: 20px; /* Space above buttons */
        }

        .button-group button {
            background-color: #5a86d6; /* Blue button background */
            color: white; /* White text */
            font-size: 16px; /* Button font size */
            padding: 10px 20px; /* Button padding */
            border: none; /* Remove borders */
            border-radius: 8px; /* Rounded corners */
            cursor: pointer; /* Pointer cursor on hover */
            width: 48%; /* Make buttons equal width */
        }

        .button-group button:hover {
            background-color: #4669ad; /* Darker blue on hover */
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Left Section for the Logo -->
        <div class="left-section">
            <div class="atm-heading">ATM</div>
            <img src="./images/bankImage2.png" alt="Bank Logo"> <!-- Bank logo -->
        </div>
        
        <!-- Right Section for the Form -->
        <div class="right-section">
            <!--<div class="close-btn">X</div>--> <!-- Close button -->
            <h2>Welcome!</h2>
            <form id="pinForm" action="/" method="post">
                <div class="form-group">
                    <label for="CardNum">Card Number</label>
                    <input type="text" id="CardNum" name="CardNum" placeholder="Enter Card Number">
                </div>
                <div class="form-group">
                    <label for="PIN">PIN</label>
                    <input type="password" id="PIN" name="PIN" placeholder="Enter PIN Number">
                </div>
                <div class="button-group">
                    <input type="submit" value="SIGN IN"> <!-- Submit button -->
                    <button type="button" onclick="clearInputs()">CLEAR</button> <!-- Clear button -->
                </div>
            </form>
        </div>
    </div>

    <script>
        // Function to clear input fields
        function clearInputs() {
            document.getElementById('CardNum').value = ''; // Clears the Card Number field
            document.getElementById('PIN').value = ''; // Clears the PIN field
        }
    </script>
</body>
</html>