<head>
    <meta charset="UTF-8"> <!-- Sets the character encoding for the document -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Ensures the page is responsive on all devices -->
    <title>Bank Login</title> <!-- Title of the page -->
    <style>
        /* General reset */
        body, html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        /* Main container for the entire layout */
        .container {
            display: flex;
            height: 100vh; /* Full viewport height */
            width: 100%; /* Full viewport width */
        }

        /* Left section for the logo */
        .left-section {
            background-color: #3367d6; /* Blue background color */
            width: 50%; /* Half the screen width */
            display: flex;
            justify-content: center; /* Center content horizontally */
            align-items: center; /* Center content vertically */
        }

        .left-section img {
            width: 500px; /* Fixed width for the logo */
            height: auto; /* Maintain aspect ratio */
        }

        /* Right section for the form */
        .right-section {
            width: 50%; /* Other half of the screen */
            background-color: #3367d6; /* Blue background color */
            color: white; /* White text color */
            padding: 40px; /* Padding for content */
            position: relative; /* Relative for positioning child elements */
        }

        .right-section h2 {
            font-size: 32px; /* Heading font size */
            margin-bottom: 20px; /* Space below the heading */
        }

        .form-group {
            margin-bottom: 20px; /* Space between input fields */
        }

        .form-group label {
            display: block; /* Label on its own line */
            margin-bottom: 5px; /* Space below label */
            font-size: 18px; /* Label font size */
        }

        .form-group input {
            width: 100%; /* Full width input fields */
            padding: 10px; /* Internal padding */
            font-size: 16px; /* Input text size */
            border: none; /* Remove borders */
            border-radius: 4px; /* Rounded corners */
            background-color: #f2f2f2; /* Light gray background */
            color: black; /* Black text color */
        }

        .button-group {
            display: flex; /* Arrange buttons in a row */
            gap: 10px; /* Space between buttons */
        }

        .button-group input[type="submit"], .button-group button {
            width: 100px; /* Button width */
            padding: 10px; /* Internal padding */
            font-size: 16px; /* Button text size */
            border: none; /* Remove borders */
            border-radius: 4px; /* Rounded corners */
            background-color: #5a86d6; /* Blue button background */
            color: white; /* White button text */
            cursor: pointer; /* Pointer cursor on hover */
        }

        .button-group input[type="submit"]:hover, .button-group button:hover {
            background-color: #4669ad; /* Darker blue on hover */
        }

        .close-btn {
            position: absolute; /* Absolute positioning for the close button */
            top: 20px; /* Space from the top */
            right: 20px; /* Space from the right */
            font-size: 24px; /* Font size for the "X" */
            color: white; /* White color */
            cursor: pointer; /* Pointer cursor on hover */
        }
    </style>
</head>
<body>

<div class="container">
    <!-- Left section for the bank logo -->
    <div class="left-section">
        <img src="./images/bankImage.png" alt="Bank Logo"> <!-- Displays the bank image -->
    </div>
    
    <!-- Right section for login form -->
    <div class="right-section">
        <div class="close-btn">X</div> <!-- Close button at the top right corner -->

        <h2>Welcome!</h2> <!-- Main welcome heading -->
        
        <!-- Form group for card number input -->
        <div class="form-group">
            <label for="cardNumber">Card Number</label> <!-- Label for card number field -->
            <input type="text" id="cardNumber" placeholder="Enter Card Number"> <!-- Card number input field -->
        </div>

        <!-- Form group for PIN number input -->
        <div class="form-group">
            <label for="pinNumber">PIN Number</label> <!-- Label for PIN number field -->
            <input type="password" id="pinNumber" placeholder="Enter PIN Number"> <!-- PIN number input field -->
        </div>
        
        <!-- Button group for Sign In and Clear buttons -->
        <div class="button-group">
            <button>SIGN IN</button> <!-- Sign In button -->
            <button>CLEAR</button> <!-- Clear button -->
        </div>
        
        <!-- Admin Login link at the bottom left of the section -->
        <a href="#" class="admin-link">Admin Login</a>
    </div>
</div>

    <script>
        // Function to clear input fields
        function clearInputs() {
            document.getElementById('CardNum').value = ''; // Clears the Card Number field
            document.getElementById('PIN').value = ''; // Clears the PIN field
        }
    </script>
</body>
</html>