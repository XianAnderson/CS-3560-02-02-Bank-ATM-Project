<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ATM Withdraw</title>
    <style>
        /* Reset */
        body, html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        /* Main container */
        .container {
            background-color: #3367d6; /* Blue background */
            height: 100vh; /* Full viewport height */
            display: flex;
            flex-direction: column; /* Stack content vertically */
            justify-content: center; /* Center content vertically */
            align-items: center; /* Center content horizontally */
            color: white; /* White text color */
        }

        /* ATM heading */
        .atm-heading {
            font-size: 48px; /* Large font size for "ATM" */
            font-weight: bold; /* Bold text */
            margin-bottom: 20px; /* Space below the heading */
        }

        /* Bank image styling */
        .bank-image {
            width: 120px; /* Set image width */
            height: auto; /* Maintain aspect ratio */
            margin-bottom: 20px; /* Space below the image */
        }

        /* Black box styling */
        .withdraw-box {
            background-color: #000; /* Black background */
            border-radius: 20px; /* Rounded corners */
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.5); /* Add shadow for depth */
            width: 500px; /* Fixed width */
            padding: 40px; /* Internal padding */
            text-align: center; /* Center align text */
        }

        .transfer-box h2 {
            font-size: 28px; /* Font size for heading */
            margin-bottom: 20px; /* Space below heading */
            text-decoration: underline; /* Underline heading */
        }

        .balance-info {
            font-size: 18px; /* Font size for balance text */
            margin-bottom: 20px; /* Space below balances */
        }

        .form-group {
            margin-bottom: 20px; /* Space between form fields */
            text-align: left; /* Left align form elements */
        }

        .form-group label {
            font-size: 18px; /* Font size for labels */
            margin-right: 10px; /* Space between label and radio input */
        }

        .form-group input[type="radio"] {
            margin-right: 10px; /* Space after radio buttons */
        }

        .form-group input[type="number"] {
            width: 100%; /* Full width input field */
            padding: 10px; /* Internal padding */
            font-size: 16px; /* Input font size */
            border: none; /* Remove borders */
            border-radius: 8px; /* Rounded corners */
            background-color: #f2f2f2; /* Light gray background */
            color: black; /* Black text */
        }

        /* Button group styling */
        .button-group {
            display: flex; /* Arrange buttons horizontally */
            justify-content: space-between; /* Space out buttons */
            margin-top: 20px; /* Space above buttons */
        }

        .button-group button {
            background-color: #5a86d6; /* Blue button background */
            color: white; /* White text */
            font-size: 16px; /* Button font size */
            padding: 10px 20px; /* Button padding */
            border: none; /* Remove borders */
            border-radius: 8px; /* Rounded corners */
            cursor: pointer; /* Pointer cursor on hover */
            width: 48%; /* Make buttons equal width */
        }

        .button-group button:hover {
            background-color: #4669ad; /* Darker blue on hover */
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- ATM heading -->
        <div class="atm-heading">ATM</div>

        <!-- Bank image -->
        <img src="/images/bankImage2.png" alt="Bank Icon" class="bank-image">
        <!-- Black box -->
        <div class="withdraw-box">
            <h2>Withdraw Funds</h2>
            <div class="balance-info">
                <p>Checking Balance: $<%= checkingBalance %></p>
                <p>Savings Balance: $<%= savingsBalance %></p>
            </div>
            <form id="numForm" method="post">
                <!-- Account to withdraw from -->
                <div class="form-group">
                    <input type="radio" id="save" name="account" value="save">
                    <label for="save">Savings</label>
                </div>
                <div class="form-group">
                    <input type="radio" id="check" name="account" value="check">
                    <label for="check">Checking</label>
                </div>
                <!-- Transfer amount -->
                <div class="form-group">
                    <input type="number" id="amount" name="amount" placeholder="Enter amount (e.g., 0.00)" min="0" step="0.01">
                </div>
                <!-- Buttons -->
                <div class="button-group">
                    <button type="submit">Submit</button>
                    <button type="button" onclick="cancelWithdraw('/home')">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Function to handle cancel button
        function cancelWithdraw(destination) {
            window.location.href = window.location.href = window.location.pathname.replace('/withdraw', destination); // Redirect to home page
        }
    </script>
</body>
</html>
