<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ATM Home</title>
    <style>
        /* Reset */
        body, html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        /* Main container */
        .container {
            background-image: url('/images/beachBackground.jpg'); /* New background image */
            background-size: cover; /* Cover the entire page */
            background-position: center; /* Center the image */
            height: 100vh; /* Full viewport height */
            display: flex;
            flex-direction: column; /* Stack content vertically */
            justify-content: center; /* Center vertically */
            align-items: center; /* Center horizontally */
            color: white; /* White text color */
        }

        /* ATM heading */
        .atm-heading {
            font-size: 48px; /* Large font size for "ATM" */
            font-weight: bold; /* Bold text */
            margin-bottom: 20px; /* Space below the heading */
        }

        /* Bank image styling */
        .bank-image {
            width: 120px; /* Set image width */
            height: auto; /* Maintain aspect ratio */
            margin-bottom: 20px; /* Space below the image */
        }

        /* Transaction menu styling */
        .transaction-menu {
            background-color: #000; /* Black background for the menu */
            color: white; /* White text color */
            padding: 40px; /* Padding around the menu */
            border-radius: 20px; /* Rounded corners */
            text-align: center; /* Center align text */
            width: 500px; /* Fixed width for the menu */
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.5); /* Shadow for depth */
        }

        .transaction-menu h3 {
            font-size: 36px; /* Large font for welcome message */
            margin-bottom: 20px; /* Space below the welcome message */
        }

        .transaction-menu h2 {
            font-size: 32px; /* Main heading font size */
            margin-bottom: 30px; /* Space below the heading */
        }

        /* Button grid container */
        .transaction-buttons {
            display: grid; /* Grid layout for buttons */
            grid-template-columns: repeat(2, 1fr); /* Two columns */
            gap: 20px; /* Space between buttons */
        }

        /* Styling for each button */
        .transaction-buttons button {
            background-color: #222; /* Dark background for buttons */
            color: white; /* White text */
            border: none; /* Remove default border */
            border-radius: 8px; /* Rounded corners */
            padding: 20px; /* Add padding inside buttons */
            font-size: 20px; /* Larger button text */
            cursor: pointer; /* Pointer cursor on hover */
        }

        /* Hover effect for buttons */
        .transaction-buttons button:hover {
            background-color: #444; /* Slightly lighter background on hover */
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- ATM heading -->
        <div class="atm-heading">ATM</div>

        <!-- Bank image -->
        <img src="/images/bankImage2.png" alt="Bank Icon" class="bank-image">
        <!-- Transaction menu -->
        <div class="transaction-menu">
            <!-- Welcome message -->
            <h3>Hello, <%=name%>!</h3>
            <!-- Main heading -->
            <h2>Please select your transaction</h2>
            <!-- Buttons for transactions -->
            <div class="transaction-buttons">
                <button onclick="goToPage('/deposit')">Deposit</button>
                <button onclick="goToPage('/balance')">Check Balance</button>
                <button onclick="goToPage('/withdraw')">Withdraw</button>
                <button onclick="goToPage('/pinChange')">Pin Change</button>
                <button onclick="goToPage('/transfer')">Transfer</button>
                <button onclick="logOut()">Log Out</button>
            </div>
            <script>
                function goToPage(destination) {
                    window.location.href = window.location.href = window.location.pathname.replace('/home', destination);
                }
                function logOut() {
                    window.location.href = '/'
                }
            </script>
        </div>
    </div>
</body>
</html>